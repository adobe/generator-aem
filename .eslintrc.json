{
  "plugins": [
    "prettier",
    "license-header"
  ],
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "env": {
    "jest": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "dot-notation": [
      "error",
      {
        "allowPattern": "^_.*$"
      }
    ],
    "import/extensions": [
      "error",
      {
        "js": "always"
      }
    ],
    "license-header/header": [
      "error",
      "./resources/license-header.js"
    ],
    "no-param-reassign": [
      "error",
      {
        "props": true,
        "ignorePropertyModificationsFor": [
          "generator"
        ]
      }
    ],
    "prettier/prettier": "error"
  }
}
